<%= form_with(model: @twet, local: true ,url: choose_new_or_edit) do |form| %>
  <% if @twet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twet.errors.count %>エラーがあります。</h2>

      <ul>
        <% @twet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="twet_title">
   <%= form.label :content %>
   <%= form.text_field :content %>
 </div>
 <%= form.submit %>
<% end %>

<%= link_to "一覧画面にもどる", twets_path, class: 'btn btn-success' %>
