<h1>ツイート一覧</h1>

<table>
  <tr>
    <th>内容</th>
  </tr>

<% @twets.each do |twet| %>
  <tr>
    <td><%= twet.content %></td>
    <td><%= link_to "編集します！", edit_twet_path(twet.id), data:{confirm: "本当に編集していいですか？"} %></td>
    <td><%= link_to "削除します！", twet_path(twet.id), method: :delete ,data:{confirm: "本当に削除していいですか？"} %></td>
  </tr>
<% end %>
</table>

